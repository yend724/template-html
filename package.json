{
  "name": "template-html",
  "version": "1.0.0",
  "description": "Template for HTML development.",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "run-s build:**",
    "build:img": "cpx \"src/assets/img/**/*.{jpg,png,gif,svg}\" dist/assets/img/",
    "build:sass": "sass --style=compressed --no-source-map src:dist",
    "build:apf": "postcss dist/assets/css/index.css -u autoprefixer -o dist/assets/css/index.css",
    "build:webpack": "webpack --config webpack.prd.js",
    "start": "npm run watch",
    "watch": "run-p watch:**",
    "watch:img": "cpx \"src/assets/img/**/*.{jpg,png,gif,svg}\" dist/assets/img/ -w",
    "watch:sass": "sass --embed-source-map src:dist -w",
    "watch:webpack": "webpack --config webpack.dev.js -w",
    "watch:bs": "browser-sync start --config bs-config.js"
  },
  "keywords": [],
  "author": "yend724",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.27.1",
    "cpx": "^1.5.0",
    "fork-ts-checker-webpack-plugin": "^6.2.13",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "sass": "^1.35.1",
    "typescript": "^4.3.4",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 2%",
    "ie 11",
    "not dead"
  ],
  "dependencies": {}
}
